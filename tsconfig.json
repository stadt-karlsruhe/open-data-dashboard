{
    "compilerOptions": {
        "allowJs": true,
        "incremental": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "module": "esnext",
        "moduleResolution": "bundler",
        "noEmit": true,
        "paths": {
            "~/data/*": [
                "./__tests__/data/*"
            ],
            "@/*": [
                "./src/*"
            ]
        },
        "plugins": [
            {
                "name": "next"
            }
        ],
        "resolveJsonModule": true,
        "types": [
            "@testing-library/jest-dom"
        ]
    },
    "exclude": [
        "node_modules"
    ],
    "extends": "@tsconfig/node21/tsconfig.json",
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts",
        "*.mjs",
        "*.d.ts",
        "__tests__/*"
, "cypress.config.js"    ]
}
